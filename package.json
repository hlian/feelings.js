{
  "name": "feelings.js",
  "version": "1.0.0",
  "description": "formerly feelings.hs",
  "main": "index.js",
  "repository": "https://github.com/hlian/feelings.js",
  "author": "hao",
  "license": "MIT",
  "scripts": {
    "test": "concurrently -n lint,tsc 'yarn jest' 'yarn tsc'",
    "prettier-watch": "onchange 'fuse.js' 'server/**/*.ts' -- prettier --write {{changed}}"
  },
  "dependencies": {
    "date-fns": "1.29.0",
    "fuse-box": "3.1.3",
    "koa": "2.5.0",
    "koa-body": "2.5.0",
    "koa-router": "7.4.0",
    "mustache": "2.3.0",
    "onchange": "3.3.0",
    "typescript": "2.7.2",
    "write-file-atomic": "2.3.0"
  },
  "devDependencies": {
    "@types/jest": "22.1.4",
    "@types/koa": "2.0.44",
    "@types/koa-router": "7.0.27",
    "@types/mustache": "0.8.30",
    "@types/node": "9.4.6",
    "@types/write-file-atomic": "2.1.1",
    "concurrently": "3.5.1",
    "jest": "22.4.2",
    "prettier": "1.11.1",
    "tslint": "5.9.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/etc/preprocessor.js"
    }
  }
}
